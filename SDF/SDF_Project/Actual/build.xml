<project name="SDF" default="compile" basedir=".">
    <property name="srcBuild" value="./build"/>
    <property name="src1.dir" value="."/>
    <property name="src2.dir" value="arbitraryarithmetic"/>
    <property name="jar.file" value="${srcBuild}/aarithmetic.jar"/>

    <target name="init">
        <mkdir dir="${srcBuild}"/>
    </target>

    <target name="compile" depends="init">
        
        <javac destdir="${srcBuild}">
            <src path="${src1.dir}"/>
            <src path="${src2.dir}"/>
        </javac>
        
        
        <jar destfile="${jar.file}" basedir="${srcBuild}/arbitraryarithmetic">
            <fileset dir="${srcBuild}">
                <include name="**/*.class"/>
            </fileset>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${srcBuild}"/>
    </target>

</project>
